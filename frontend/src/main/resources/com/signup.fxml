<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@styles/signupStyle.css" fx:controller="com.SignupController">
    <center>
        <VBox spacing="30" alignment="CENTER" style="-fx-padding: 50;">
            <Label text="Create Your Account" styleClass="title" />

            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Full Name" styleClass="input-label" />
                <TextField promptText="Enter your Full Name" styleClass="input-field" />
            </VBox>

            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Email" styleClass="input-label" />
                <TextField promptText="Enter your Email" styleClass="input-field" />
            </VBox>

            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Password" styleClass="input-label" />
                <PasswordField promptText="Enter your Password" styleClass="input-field" />
            </VBox>

            <VBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Confirm Password" styleClass="input-label" />
                <PasswordField promptText="Confirm your Password" styleClass="input-field" />
            </VBox>

            <Button text="Sign Up" styleClass="primary-button"/>
            <Label text="Already have an account? Log in" styleClass="link-label" onMouseClicked="#switchToLogin" />
        </VBox>
    </center>
</BorderPane>
