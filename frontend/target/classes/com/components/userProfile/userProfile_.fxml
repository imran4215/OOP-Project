<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" spacing="20" alignment="TOP_CENTER" styleClass="root"
    xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.UserProfileController" stylesheets="@../../styles/userProfileStyle.css">
    <!-- Upper Part: User Profile -->
    <VBox alignment="CENTER" styleClass="profile-section">

        <VBox spacing="10" alignment="CENTER_LEFT" styleClass="info-container">
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label text="Username:" styleClass="label"/>
                <Label fx:id="usernameLabel" text="JohnDoe" styleClass="info"/>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label text="Email:" styleClass="label"/>
                <Label fx:id="emailLabel" text="johndoe@example.com" styleClass="info"/>
            </HBox>
        </VBox>

        <Button fx:id="editButton" text="Edit Profile" onAction="#handleEditProfile" styleClass="button"/>
    </VBox>

    <!-- Lower Part: Recent Orders -->
    <VBox spacing="15" alignment="TOP_CENTER" styleClass="orders-section">
        <Label text="Recent Orders" styleClass="section-title"/>
        <TableView fx:id="ordersTable" styleClass="table-view">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="300"/>
                <TableColumn fx:id="orderDateColumn" text="Order Date" prefWidth="200"/>
                <TableColumn fx:id="orderAmountColumn" text="Amount" prefWidth="150"/>
                <TableColumn fx:id="orderStatusColumn" text="Status" prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>
</VBox>