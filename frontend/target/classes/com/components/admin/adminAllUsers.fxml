<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.AdminAllUsersController" stylesheets="@../../styles/adminAllUsersStyle.css">

    <top>
        <VBox styleClass="header">
            <Label text="All Users" styleClass="header-label"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="userTable" styleClass="user-table" VBox.vgrow="ALWAYS">
            <placeholder>
                <Label text="No users found" styleClass="empty-label"/>
            </placeholder>
        </TableView>
    </center>
</BorderPane>