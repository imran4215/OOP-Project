<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1" spacing="20.0" styleClass="content-panel" stylesheets="@styles/adminDashboardStyle.css">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Users Management" styleClass="section-title"/>

    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="User ID" prefWidth="100.0"/>
            <TableColumn text="Username" prefWidth="200.0"/>
            <TableColumn text="Email" prefWidth="250.0"/>
            <TableColumn text="Status" prefWidth="100.0"/>
        </columns>
        <placeholder>
            <Label text="No users available"/>
        </placeholder>
    </TableView>
</VBox>